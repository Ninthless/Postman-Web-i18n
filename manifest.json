{
  "manifest_version": 3,
  "name": "Postman Web i18n",
  "description": "为Postman网页版提供国际化汉化支持",
  "version": "1.0.0",
  "default_locale": "en",
  "content_scripts": [
    {
      "matches": [
        "https://*.postman.com/*",
        "https://*.postman.co/*"
      ],
      "js": [
        "content/i18n-loader.js",
        "content/translator.js",
        "content/main.js"
      ],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["locales/*"],
      "matches": ["https://*.postman.com/*", "https://*.postman.co/*"]
    }
  ],
  "permissions": [
    "storage"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background/background.js"
  },
  "options_page": "options/options.html"
}

